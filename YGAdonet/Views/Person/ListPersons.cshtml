@using YGAdonet.Models
@model List<Person>
@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
</head>

<body>
    <table class="table table-bordered" style="max-width:98vw;margin:1%">
        <thead>
            <tr>
                <th>Person Name</th>
                <th>Person Surname</th>
                <th>Person Country</th>
                <th>Delete Person</th>
                <th>Edit Person</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>@person.PersonName</td>
                    <td>@person.PersonSurname</td>
                    <td>@person.Country.CountryName</td>
                    <td>
                        <a class="btn btn-danger" href="@Url.Action("DeletePerson","Person",new {id=person.PersonID})">Delete Person</a>
                    </td>
                    <td>
                        <a class="btn btn-warning" href="@Url.Action("EditPerson","Person",new {id=person.PersonID})">Edit Person</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a style="margin:1%" class="btn btn-info" href="@Url.Action("AddPerson","Person")">Add Person</a>
</body>